    <div class="login-card">
        <h1>Log-in</h1><br />


        @using (Html.BeginForm("SendDt", "Login", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
        {
            <div class="form-group">
                @Html.Label("Username")
                @Html.EditorFor(model => model.USER_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.USER_NAME)
            </div>
            <div class="form-group">
                @Html.Label("Password")
                @Html.EditorFor(model => model.USER_PASS, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.USER_PASS)

            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-warning" />
            </div>
        }
    </div>

    <div class="login-help">
        <!--<a href="#">Register</a> • <a href="#">Forgot Password</a>-->
    </div>
</body>
